<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" metadata-complete="true" version="3.0">
  <servlet>
    <servlet-name>SignIn</servlet-name>
    <servlet-class>connessione.SignIn</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Callback</servlet-name>
    <servlet-class>connessione.Callback</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AppOnly</servlet-name>
    <servlet-class>connessione.AppOnlySignIn</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>connessione.Logout</servlet-class>
  </servlet>  
  <servlet-mapping>
    <servlet-name>SignIn</servlet-name>
    <url-pattern>/SignIn</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Callback</servlet-name>
    <url-pattern>/Callback</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AppOnly</servlet-name>
    <url-pattern>/AppOnlySignIn</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  
  <error-page>
  	<exception-type>java.lang.Throwable</exception-type>
  	<location>/pagine/error.jsp</location>
  </error-page>
</web-app>